<!DOCTYPE HTML>
<!--
tinypng
-->
<html>

<head>
    <title>
        Code Book
    </title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> -->

    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/main.css" />
    <script src="https://kit.fontawesome.com/85999f6d09.js" crossorigin="anonymous"></script>

</head>

<body class="">
    <!-- Nav tabs -->

    <%- include('./partials/nav.ejs') %>

    <section>
        <div class="row">
            <div class="col py-3" style="background-color: #fff;">
                <div class="container">
                    <h2 class="display-4"><i class="fas fa-code mr-2" style="font-size: 45px;"></i>Create Problems
                    </h2>
                </div>

            </div>
        </div>
        <div class="row justify-content-center">

            <div class="col-md-8 ">
                <form action="/problems/edit/<%=Problem.ID%>" method="POST" id="formProblem">
                    <div class="card-body">
                        <h2 class="mb-2">Please edit all the data you want to update</h2>
                        <label for="">Problem Name</label>
                        <input form="formProblem" required type="text" class="form-control mb-md-0 mb-5 form-control-lg"
                            type="text" id="title" name="title" value="<%=Problem.Name%>">
                        <label for=""> Problem Description</label>
                        <textarea form="formProblem" required class="form-control  form-control-lg" type="text"
                            id="body" name="body"><%=Problem.statement%></textarea>
                        <label for="">Problem Input Format </label>
                        <input form="formProblem" required type="text" class="form-control mb-md-0 mb-3 form-control-lg"
                            type="text" id="problemInputFormat" name="problemInputFormat"
                            value="<%=Problem.Input_Format%>">

                        <label for="">Problem Output Format</label>
                        <input form="formProblem" required type="text" class="form-control mb-md-0 mb-3 form-control-lg"
                            type="text" id="problemOutputFormat" name="problemOutputFormat"
                            value="<%=Problem.Output_Format%>">

                        <label for="">Sample Input
                        </label>
                        <input form="formProblem" required type="text" class="form-control mb-md-0 mb-3 form-control-lg"
                            type="text" id="SampleInput" name="SampleInput" value="<%=Problem.Sample_Input%>">

                        <label for="">
                            Sample Output
                        </label>
                        <input form="formProblem" required type="text" class="form-control mb-md-0 mb-3 form-control-lg"
                            type="text" id="SampleOutput" name="SampleOutput" value="<%=Problem.Sample_Output%>">

                        <label for="">Problem Input</label>
                        <input form="formProblem" required type="text" class="form-control mb-md-0 mb-3 form-control-lg"
                            type="text" id="problemInput" name="problemInput" value="<%=Problem.Input%>">

                        <label for="">Problem Output</label>
                        <input form="formProblem" required type="text" class="form-control mb-md-0 mb-3 form-control-lg"
                            type="text" id="problemOutput" name="problemOutput" value="<%=Problem.Output%>">

                        <label for="">Problem Topic</label>
                        <input form="formProblem" required type="text" placeholder=""
                            class="form-control mb-md-0 mb-3 form-control-lg" type="text" id="Topic" name="Topic"
                            value="<%=Problem.Topic%>">

                        <label for="">Problem Score</label>
                        <input form="formProblem" required type="number" id="scoreInput"
                            class="form-control mb-md-0 mb-3 form-control-lg" type="number" id="Score" name="Score">

                        <label for="">Problem Difficulty</label>
                        <input form="formProblem" required type="number" id="DifficultyInput"
                            class="form-control mb-md-0 mb-3 form-control-lg" type="number" id="Difficulty"
                            name="Difficulty">

                        <button form="formProblem" type="submit"
                            class="btn mt-3 btn-outline-dark btn-block">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <%- include('./partials/footer.ejs') %>
    <!-- Scripts -->

    <%- include('./partials/Scripts.ejs') %>
    <script>

    </script>
</body>

</html>