<body class="">
	<!-- Nav tabs -->

	<%- include('./partials/nav.ejs') %>

		<section>
			<div class="row mb-3">
				<div class="col py-3" style="background-color: #fff;">
					<div class="container">
						<h2 class="display-4"><i class="fas fa-home mr-2" style="font-size: 45px;"></i> Home Page
						</h2>
					</div>

				</div>
			</div>
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-9">

						<%if(arrArticles.length){%>
							<%arrArticles.forEach(Art=>{%>
								<%if(Art.type=="Article"){%>
									<div class="card w-100 mb-2">
										<div class="card-header d-flex align-items-center">
											<div class="boxName"><%=Art.Writer.substring(0,1).toUpperCase()%></div>
											<a href="/profile/<%=Art.Writer%>"><%=Art.Writer%> </a>	&nbsp;Write an Article	&nbsp;<a href="/articles/<%=Art.ID%>"><%=Art.ArtName%></a>
										</div>
										<div class="card-body">
											<h5 class="card-title h2"><%=Art.Topic%></h5>
											<p class="card-text"><%=Art.Statment.substring(0, 50)%>...<a href="/articles/<%=Art.ID%>">Read more</a></p>
										</div>
										<div class="card-footer">
											<small class="text-muted">Last updated <%=Art.date.toLocaleDateString("en-US").split("-")%> <%=Art.date.toLocaleTimeString('en-US')%></small>
										</div>
									</div>
								<%}else{%>
									<div class="card w-100 mb-2">
										<div class="card-header d-flex align-items-center">
											<div class="boxName"><%=Art.Writer.substring(0,1).toUpperCase()%></div>
											<a href="/profile/<%=Art.Writer%>"><%=Art.Writer%></a> &nbsp;Write an Documentation&nbsp; <a href="/documentation/<%=Art.ID%>"><%=Art.DocName%></a>
										</div>
										<div class="card-body">
											<h5 class="card-title"><%=Art.Topic%></h5>
											<p class="card-text"><%=Art.Statment.substring(0, 50)%>...<a href="/articles/<%=Art.ID%>">Read more</a></p>
										</div>
										<div class="card-footer">
											<small class="text-muted">Last updated <%=Art.date.toLocaleDateString("en-US").split("-")%> <%=Art.date.toLocaleTimeString('en-US')%></small>
										</div>
									</div>
								<%}%>
							<%})%>
						<%}%>
						
					</div>
				</div>
			</div>
		</section>

